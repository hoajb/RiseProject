<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_background_gray480"
    android:orientation="vertical"
    tools:context=".activity.MainClassDetailActivity">

    <vn.com.rise.project.views.percentage.PercentLinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginTopPercent="5%">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/state_button_back"/>

        <ImageView
            android:id="@+id/button_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/state_button_home"/>

        <TextView
            android:id="@+id/title_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_title_2"
            android:gravity="center"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/White"
            android:textStyle="bold"
            app:layout_widthPercent="20%"
            tools:text="PreK"/>
    </vn.com.rise.project.views.percentage.PercentLinearLayout>

    <Button
        android:id="@+id/image"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_title"
        android:text="@string/class_main_detail_image"
        app:layout_heightPercent="15%"
        app:layout_marginLeftPercent="30%"
        app:layout_marginTopPercent="10%"
        app:layout_widthPercent="40%"/>

    <Button
        android:id="@+id/video"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:text="@string/class_main_detail_video"
        app:layout_heightPercent="15%"
        app:layout_marginLeftPercent="30%"
        app:layout_marginTopPercent="5%"
        app:layout_widthPercent="40%"/>

    <Button
        android:id="@+id/info"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/video"
        android:text="@string/class_main_detail_info"
        app:layout_heightPercent="15%"
        app:layout_marginLeftPercent="30%"
        app:layout_marginTopPercent="5%"
        app:layout_widthPercent="40%"/>

